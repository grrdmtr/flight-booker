<%= form_with url: "/flights", method: :get do |form| %>

  <div class="form-field">
    <%= form.label :departure_airport_id, "Deperture Airport:" %>
    <%= form.select(:departure_airport_id,
                    @airport_options,
                    {:prompt => 'Select Departure Airport' },
                    required: true) %>
  </div>
  <div class="form-field">
    <%= form.label :arrival_airport_id, "Arrival Airport:" %>
    <%= form.select(:arrival_airport_id,
                    @airport_options,
                    {:prompt => 'Select Arrival Airport' },
                    required: true) %>
  </div>
   <div class="form-field">
    <%= form.label "Passengers" %>
    <%= form.select(:passenger_count,
                    options_for_select([1, 2, 3, 4],
                    params[:passenger_count]),
                    required: true ) %>
  </div> 
  <div class="form-field">
    <%= form.label :start_date, "Select date:" %>
    <%= form.date_field :start_date,
                        value: params[:start_date],
                        required: true %>
  </div>
  <div class="form-button">
    <%= form.submit "Search" %>
  </div>

<% end %> 